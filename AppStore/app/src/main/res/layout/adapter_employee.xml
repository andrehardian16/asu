<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/black"
                  android:id="@+id/name_employeeDetail"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/black"
                  android:id="@+id/position_employeeDetail"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/black"
                  android:id="@+id/phone_employeeDetail"/>/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#000000"
                  android:orientation="vertical">
        <View android:layout_width="match_parent"
              android:layout_height="2dp"
              style="?attr/dividerHorizontal"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="right"
                  android:orientation="horizontal">
        <Button android:layout_width="@dimen/widthIcon"
                android:layout_height="@dimen/heightIcon"
                android:id="@+id/editEmployee"
                android:background="@drawable/edit"/>
        <Button android:layout_width="@dimen/widthIcon"
                android:layout_height="@dimen/heightIcon"
                android:id="@+id/deleteEmployee"
                android:background="@drawable/delete"/>
    </LinearLayout>

</LinearLayout>